import java.util.Scanner;

public class week3_practice {
    public static void main(String[] args){

        Scanner sc = new Scanner(System.in);
        int sum=0, input=0;
        while(input!=-1){
            sum+=input;
            System.out.println("정수를 입력하시오: ");
            input=sc.nextInt();
        }
        
    }
}